{
  "name": "code-highlighter",
  "version": "0.1.0",
  "description": "Lightweight TypeScript syntax highlighting library + CLI (initial JS support) with HTML and ANSI output and theming.",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "code-highlight": "dist/src/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    },
    "./adapters/antlr": {
      "import": "./dist/src/adapters/antlr.js",
      "types": "./dist/src/adapters/antlr.d.ts"
    },
    "./register-antlr": {
      "import": "./dist/src/register-antlr.js",
      "types": "./dist/src/register-antlr.d.ts"
    }
  },
  "scripts": {
  "build": "tsc -p tsconfig.json",
  "generate:antlr": "antlr4ts -o src/generated/antlr src/grammars/antlr/*.g4 && node scripts/flatten-antlr.js",
  "setup:antlr": "node scripts/fetch-antlr.js",
  "generate:samples": "ts-node samples/generate-samples.ts",
  "clean": "rimraf dist",
  "clean:cache": "rimraf dist node_modules/.vitest",
  "clean:artifacts": "rimraf dist node_modules/.vitest tsconfig.tsbuildinfo",
  "test": "vitest run",
  "pretest": "npm run clean:cache",
  "test:full": "npm run clean:artifacts && npm run build && vitest run --clearCache",
    "test:fresh": "npm run clean:cache && npm run build && vitest run --clearCache",
    "dev": "vitest",
    "prepare": "npm run build"
  },
  "keywords": ["syntax", "highlight", "ansi", "html", "cli", "javascript", "typescript"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.30",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0",
  "rimraf": "^5.0.5",
  "antlr4ts": "^0.5.0-alpha.4",
  "antlr4ts-cli": "^0.5.0-alpha.4",
  "ts-node": "^10.9.2"
  }
}
